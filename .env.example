# SYMBI Trust Platform Configuration
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/symbi

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=symbi:

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# AI Provider API Keys (Optional - enable only what you need)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=1000
ANTHROPIC_TEMPERATURE=0.7

PERPLEXITY_API_KEY=pplx-your-perplexity-api-key
PERPLEXITY_MODEL=pplx-70b-online

V0_API_KEY=v0-your-v0-api-key
V0_BASE_URL=https://api.v0.dev

# Trust Scoring Configuration
TRUST_WEIGHT_TECHNICAL=0.25
TRUST_WEIGHT_ETHICAL=0.20
TRUST_WEIGHT_OPERATIONAL=0.20
TRUST_WEIGHT_TRANSPARENCY=0.15
TRUST_WEIGHT_SECURITY=0.10
TRUST_WEIGHT_COMPLIANCE=0.10

TRUST_THRESHOLD_MINIMUM=0.3
TRUST_THRESHOLD_WARNING=0.5
TRUST_THRESHOLD_GOOD=0.7
TRUST_THRESHOLD_EXCELLENT=0.9

TRUST_DECAY_ENABLED=true
TRUST_DECAY_RATE=0.01
TRUST_DECAY_INTERVAL_MS=86400000

# DID/VC Configuration
DEFAULT_DID_METHOD=key
DID_RESOLVER_TIMEOUT_MS=5000
VC_PROOF_TYPE=Ed25519Signature2018
VC_EXPIRATION_DAYS=365

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false
LOG_FILE_PATH=logs/symbi.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Feature Flags
ENABLE_METRICS=true
ENABLE_CACHE=true
ENABLE_WEBSOCKET=true
ENABLE_BIAS_DETECTION=true
ENABLE_COMPLIANCE_MONITORING=true
ENABLE_AUDIT_TRAIL=true

# External Services Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT_MS=30000

EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Performance Configuration
CACHE_DEFAULT_TTL=300
CACHE_MAX_KEYS=10000
PAGINATION_DEFAULT_LIMIT=20
PAGINATION_MAX_LIMIT=100
DEFAULT_TIMEOUT_MS=30000
LONG_TIMEOUT_MS=60000